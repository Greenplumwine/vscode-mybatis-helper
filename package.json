{
  "name": "mybatis-helper-vscode",
  "displayName": "Mybatis Helper",
  "description": "%description%",
  "version": "0.0.8",
  "publisher": "Greenplumwine",
  "icon": "static/icon/mybatis-helper-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Greenplumwine/vscode-mybatis-helper.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Other"
  ],
  "main": "./out/extension.js",
  "l10n": "./l10n",
  "activationEvents": [
    "workspaceContains:**/pom.xml",
    "workspaceContains:**/build.gradle"
  ],
  "extensionDependencies": [
    "redhat.java"
  ],
  "contributes": {
    "commands": [
      {
        "command": "mybatis-helper.toggleLogInterceptor",
        "title": "%command.toggleLogInterceptor.title%",
        "category": "MyBatis Helper"
      },
      {
        "command": "mybatis-helper.showSqlOutput",
        "title": "%command.showSqlOutput.title%",
        "category": "MyBatis Helper"
      },
      {
        "command": "mybatis-helper.clearSqlHistory",
        "title": "%command.clearSqlHistory.title%",
        "category": "MyBatis Helper"
      },
      {
        "command": "mybatis-helper.jumpToXml",
        "title": "%command.jumpToXml.title%",
        "category": "MyBatis Helper"
      },
      {
        "command": "mybatis-helper.jumpToMapper",
        "title": "%command.jumpToMapper.title%",
        "category": "MyBatis Helper"
      },
      {
        "command": "mybatis-helper.refreshMappings",
        "title": "%command.refreshMappings.title%",
        "category": "MyBatis Helper"
      },
      {
        "command": "mybatis-helper.refreshData",
        "title": "%command.refreshData.title%",
        "category": "MyBatis Helper"
      }
    ],
    "keybindings": [
      {
        "command": "mybatis-helper.jumpToXml",
        "key": "alt+x",
        "mac": "cmd+shift+x",
        "when": "editorFocus && resourceExtname == '.java'"
      },
      {
        "command": "mybatis-helper.jumpToMapper",
        "key": "alt+m",
        "mac": "cmd+shift+m",
        "when": "editorFocus && resourceExtname == '.xml'"
      }
    ],

    "configuration": {
      "type": "object",
      "title": "%configuration.title%",
      "properties": {
        "mybatis-helper.databaseType": {
          "type": "string",
          "default": "mysql",
          "description": "%configuration.databaseType.description%"
        },
        "mybatis-helper.enableLogInterceptor": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.enableLogInterceptor.description%"
        },
        "mybatis-helper.customLogPattern": {
          "type": "string",
          "default": "",
          "description": "%configuration.customLogPattern.description%"
        },
        "mybatis-helper.maxHistorySize": {
          "type": "number",
          "default": 100,
          "description": "%configuration.maxHistorySize.description%"
        },
        "mybatis-helper.showExecutionTime": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.showExecutionTime.description%"
        },
        "mybatis-helper.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.enableCodeLens.description%"
        },
        "mybatis-helper.fileOpenMode": {
          "type": "string",
          "enum": [
            "useExisting",
            "noSplit",
            "alwaysSplit"
          ],
          "default": "useExisting",
          "description": "%configuration.fileOpenMode.description%"
        },
        "mybatis-helper.customXmlDirectories": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "%configuration.customXmlDirectories.description%"
        },
        "mybatis-helper.logOutputLevel": {
          "type": "string",
          "enum": [
            "info",
            "debug"
          ],
          "default": "info",
          "description": "%configuration.logOutputLevel.description%"
        },
        "mybatis-helper.batchProcessDelay": {
          "type": "number",
          "default": 200,
          "description": "%configuration.batchProcessDelay.description%"
        },
        "mybatis-helper.nameMatchingRules": {
          "type": "array",
          "default": [
            {
              "name": "%configuration.nameMatchingRules.defaultMapper.name%",
              "enabled": true,
              "javaPattern": "*Mapper",
              "xmlPattern": "${javaName}",
              "description": "%configuration.nameMatchingRules.defaultMapper.description%"
            },
            {
              "name": "%configuration.nameMatchingRules.defaultDao.name%",
              "enabled": true,
              "javaPattern": "*Dao",
              "xmlPattern": "${javaName}",
              "description": "%configuration.nameMatchingRules.defaultDao.description%"
            },
            {
              "name": "%configuration.nameMatchingRules.standardMapper.name%",
              "enabled": true,
              "javaPattern": "*",
              "xmlPattern": "${javaName}",
              "description": "%configuration.nameMatchingRules.standardMapper.description%"
            }
          ],
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "%configuration.nameMatchingRules.item.name.description%"
              },
              "enabled": {
                "type": "boolean",
                "description": "%configuration.nameMatchingRules.item.enabled.description%"
              },
              "javaPattern": {
                "type": "string",
                "description": "%configuration.nameMatchingRules.item.javaPattern.description%"
              },
              "xmlPattern": {
                "type": "string",
                "description": "%configuration.nameMatchingRules.item.xmlPattern.description%"
              },
              "description": {
                "type": "string",
                "description": "%configuration.nameMatchingRules.item.description.description%"
              }
            },
            "required": ["name", "enabled", "javaPattern", "xmlPattern"]
          },
          "description": "%configuration.nameMatchingRules.description%"
        },
        "mybatis-helper.ignoreSuffixes": {
          "type": "array",
          "default": ["Mapper", "Dao"],
          "items": {
            "type": "string"
          },
          "description": "%configuration.ignoreSuffixes.description%"
        },
        "mybatis-helper.pathPriority": {
          "type": "object",
          "default": {
            "enabled": true,
            "priorityDirectories": ["/src/", "/main/", "/resources/"],
            "excludeDirectories": ["/build/", "/target/", "/out/", "/.git/"]
          },
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "%configuration.pathPriority.enabled.description%"
            },
            "priorityDirectories": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "%configuration.pathPriority.priorityDirectories.description%"
            },
            "excludeDirectories": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "%configuration.pathPriority.excludeDirectories.description%"
            }
          },
          "description": "%configuration.pathPriority.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  }
}